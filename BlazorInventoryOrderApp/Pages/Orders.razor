@page "/orders"

<h3>Orders</h3>

@if (orders == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.ProductId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Order[] orders;

    protected override async Task OnInitializedAsync()
    {
        orders = await OrderService.GetOrders();
    }
}